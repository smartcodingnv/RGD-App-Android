<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_dialog"
    android:background="@color/colorIdolDetailDialogBackground"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:orientation="vertical"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_search"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/curv_edgegreen"
                android:fontFamily="@font/fagono"
                android:gravity="bottom"
                android:padding="@dimen/_10sdp"
                tools:hint="Search Near By Huisartsen"
                android:textColorHint="#f8f8f8"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:background="@drawable/curv_edge"
                android:fontFamily="@font/fagono"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                tools:text="Search Huisartsen"
                android:textSize="@dimen/_14ssp" />


        </FrameLayout>


        <Button
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/curv_edgemidumgreen"
            android:fontFamily="@font/fagono"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="@string/res_search"
            android:textColor="@color/green"
            android:textSize="@dimen/_14ssp" />

    </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>